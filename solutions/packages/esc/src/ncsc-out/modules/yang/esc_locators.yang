      type string;
    }
  }

  grouping ncs_rpc_notif_network_vim_locators {
    container locator {
      presence "Indicates multi VIM capable configuration with VIM explicitly defined.";
      description
        "Information to identify the target VIM and VIM related config to
         realize the configuration for the network.";
      must "../../../../../vim_mapping[text()='false']" {
        tailf:xpath-root 3;
        error-message "tenant vim_mapping must be set to false";
      }
      uses ncs_rpc_notif_common_locator_info;
    }
  }

  grouping ncs_rpc_notif_locators {
    container locator {
